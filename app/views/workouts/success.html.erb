<div class="total">
  <div class="created-container">

    <div class="created-header">
     <p>YOUR WORKOUT</p>
      <h1><%= @title %></h1>
    </div>

    <div class="created-box-container">
      <div class="success-timer">
        <%= image_tag "time-logo.png", alt: "time logo" %>
        <div>
          <p> You trained for <%= @workout.duration %> minutes</p>
        </div>
      </div>
    </div>
    <div class="success-focus">
      <h5>Your exercices</h5>
      <div class="d-flex">
        <div class="focus-array">
          <% @workout_exercises.each do |exercice| %>
            <div class="focus-element">
              <%= exercice.exercise.title %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="nbar">
  <%= render 'shared/nbar' %>
</div>
