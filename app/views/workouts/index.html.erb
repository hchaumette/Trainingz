<div class="workout_page">
  <div class="top-dash">
    <div>
      <%= render 'shared/back_arrow', path:'root_path' %>
    </div>
    <div>
      <h1>WORKOUTS</h1>
    </div>

  </div>

   <div class="search-bar">
      <%= form_with url: workouts_path, method: :get, class: "search-bar-exercise" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "search-bar-exercise search-background",
      placeholder: "Search"
    %>
    <%= submit_tag "Search", class: "d-none" %>
  <% end %>
    </div>


<% if @query.present? && @search_workout != nil %>
    <h2 class="text-center m-5">Results for <%=@query %></h2>
      <div class="cards">
        <% @search_workout.each do |workout| %>
          <%= link_to workout_path(workout) do %>
          <%= render 'shared/workout_card_dashboard', workout: workout%>
          <% end %>
        <% end %>
      </div>
    </div>

  <% else %>
    <h2 class="text-center m-5">ALL WORKOUTS</h2>
      <div class="dash-container">
        <div class="container justify-content-center">
          <div class="cards">
            <% @workouts.each do |workout| %>
              <%= link_to workout_path(workout) do %>
              <%= render 'shared/workout_card_dashboard', workout: workout%>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
  <% end %>



<div class="container">
  <%if @search_workout != nil && @search_workout.empty?  %>
    <h2 class="empty m-5 text-center">No Result Found.</h2>

  <%else %>
    <% if @duration %>
      <h1 class="text-center m-5"><%= @duration.upcase %></h1>
      <% if  @duration_workout.empty? %>
        <h2 class="empty m-5 text-center">No workout registered.</h2>
      <%else %>
        <div class="cards">
          <% @duration_workout.each do |workout| %>
            <%= link_to workout_path(workout) do %>
              <%= render 'shared/workout_card_dashboard', workout: workout %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  <% end %>

  </div>


</div>
  <div class="nbar">
    <%= render 'shared/nbar' %>
  </div>
